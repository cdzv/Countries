<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Countries.Views.TranslationsPage"
             BackgroundColor="{StaticResource colorBackgroud}" 
             IconImageSource="ic_g_translate.png">

    <StackLayout
            Padding="5">
        <Label
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Padding="10,10"
                Text="{Binding Name}"
                TextColor="{StaticResource colorFont}">
        </Label>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label
                    Grid.Column="0"
                    Grid.Row="0"
                    Padding="10,10"
                    Text="German"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="0"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.De}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="1"
                    Padding="10,10"
                    Text="Spanish"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                Grid.Column="1"
                Grid.Row="1"
                FontAttributes="Bold"
                Padding="10,10"
                Text="{Binding Translations.Es}"
                TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                Grid.Column="0"
                Grid.Row="2"
                Padding="10,10"
                Text="French"
                TextColor="{StaticResource colorFont}"/>
            <Label
                    Grid.Column="1"
                    Grid.Row="2"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.Fr}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="3"
                    Padding="10,10"
                    Text="Japanese"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="3"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.Ja}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="4"
                    Padding="10,10"
                    Text="Italian"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="4"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.It}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="5"
                    Padding="10,10"
                    Text="Brazilian"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="5"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.Br}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="6"
                    Padding="10,10"
                    Text="Portuguese"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="6"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.Pt}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="7"
                    Padding="10,10"
                    Text="Dutch"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="7"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.Nl}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="8"
                    Padding="10,10"
                    Text="Croatian"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="8"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.Hr}"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="0"
                    Grid.Row="9"
                    Padding="10,10"
                    Text="Persian"
                    TextColor="{StaticResource colorFont}">
            </Label>
            <Label
                    Grid.Column="1"
                    Grid.Row="9"
                    FontAttributes="Bold"
                    Padding="10,10"
                    Text="{Binding Translations.Fa}"
                    TextColor="{StaticResource colorFont}">
            </Label>
        </Grid>
    </StackLayout>

</ContentPage>
